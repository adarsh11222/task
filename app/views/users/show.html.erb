<div>
<h1>User Details</h1>

<p><strong>Fname:</strong><%= @user.fname %></p> 
<p><strong>Lname:</strong><%= @user.lname %></p><hr>



<h4>Organisations</h4>
<% @user.organisations.each do |org| %>
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= org.name%></h5>
    <%= link_to 'view', user_organisation_path(@user,org), class:"btn btn-primary" %>
  </div>
</div>
<% end %>


<%= link_to 'Back', root_path, class:"btn btn-warning" %>

<%= link_to 'caete org', new_user_organisation_path(@user), class:"btn btn-success" %><br>

</div>